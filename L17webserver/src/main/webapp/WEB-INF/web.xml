<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>DBWebService</display-name>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.otus.l17.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User Browser</servlet-name>
        <jsp-file>/views/user-browser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>User Browser</servlet-name>
        <url-pattern>/user-browser.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User Editor</servlet-name>
        <jsp-file>/views/user-editor.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>User Editor</servlet-name>
        <url-pattern>/user-editor.jsp</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/views/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>